<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cavalrybear.mastertiger">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true"
        />
    
    <application
        android:allowBackup="true" 
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
	    android:debuggable="true">

	    <activity
		    android:name=".ui.splashScreen.SplashActivity"
	        android:label="@string/label_splash_screen"
	        android:screenOrientation="portrait">
		    <intent-filter>
			    <action android:name="android.intent.action.MAIN"/>
			    <category android:name="android.intent.category.LAUNCHER"/>
		    </intent-filter>
	        </activity>

	    <activity
		    android:name=".ui.homeScreen.HomeActivity"
		    android:screenOrientation="portrait">

		</activity>

	    <activity
		    android:name=".ui.tournamentConfigScreen.TournamentConfigActivity"
		    android:screenOrientation="portrait">

	    </activity>

	    <activity
		    android:name=".ui.playerRegistrationScreen.PlayerRegistrationActivity"
		    android:screenOrientation="portrait">

	    </activity>

	    <activity
		    android:name=".ui.swissRoundScreen.SwissRoundActivity"
		    android:screenOrientation="portrait">

	    </activity>

	    <activity
		    android:name=".ui.winnerScreen.WinnerActivity"
		    android:screenOrientation="portrait">

	    </activity>
    </application>

</manifest>
